<resources>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="MaterialTheme">

    </style>

    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all Pre-Lollipop and Lollipop above versions -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/white</item> <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- Color of overflow menu (3 dots) & navigation drawer -->

    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">#9E9E9E</item> <!-- Text color of Overflow Menu items -->
        <item name="android:textColorSecondary">#fffcfff6</item> <!-- Background color -->

    </style>

</resources>
